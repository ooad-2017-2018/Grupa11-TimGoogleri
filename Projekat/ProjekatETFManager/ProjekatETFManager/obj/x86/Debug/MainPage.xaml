<Page
    x:Class="ProjekatETFManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjekatETFManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' Name="BackgroundGrid" Margin="-15,15,15,-15" Background="#FF161619" MinWidth="600">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="VisualStateGroup">

                <VisualState x:ConnectionId='3' x:Name="VisualStatePhone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ETFManager.FontSize" Value="42" />
                        <Setter Target="PostaniManager.FontSize" Value="18" />
                        <Setter Target="PostaniManager.Margin" Value="36, 50, 0, 0" />
                        <Setter Target="LOGIN.FontSize" Value="18" />
                        <Setter Target="LOGIN.Margin" Value="36, 190, 0, 0" />
                        <Setter Target="LoginPanel.Margin" Value="0, 0, 0, 0" />
                        <Setter Target="RegistracijaPanel.Margin" Value="0, 10, 0, 0" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='4' x:Name="VisualStateTablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='5' x:Name="VisualStateDesktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">

            <Grid Margin="-15,15,15,-15">

                <StackPanel x:ConnectionId='6' Name="ETFManagerPanel" Margin="10, 20, 0, 0">
                    <TextBlock x:ConnectionId='23' Name="ETFManager" HorizontalAlignment="Left" Margin="36,1,0,-97" Text="ETF MANAGER" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Segoe UI" FontWeight="Bold" FontSize="72" Width="540" Foreground="White"/>
                    <TextBlock x:ConnectionId='24' Name="PostaniManager" HorizontalAlignment="Left" Margin="41,84,0,-127" Text="Postani manager, ostvari svoj san." TextWrapping="Wrap" VerticalAlignment="Top" FontSize="32" Height="43" Width="535" FontStretch="Normal" CharacterSpacing="30" Foreground="White"/>
                </StackPanel>

                <StackPanel x:ConnectionId='7' Name="LoginPanel" Margin="50, 40, 0, 0">
                    <TextBlock x:ConnectionId='17' Name="LOGIN" HorizontalAlignment="Left" Margin="150,171,0,-219" Text="LOG IN" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Segoe UI" FontWeight="Bold" FontSize="36" Foreground="White"/>
                    <TextBlock x:ConnectionId='18' x:Name="Username" HorizontalAlignment="Left" Margin="100,250,0,-267" Text="Username:" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" Height="24"/>
                    <TextBox x:ConnectionId='19' Name="UsernameUnos" HorizontalAlignment="Left" Margin="175,240,0,-275" Text="" VerticalAlignment="Top" Width="145" Background="White"/>
                    <TextBlock x:ConnectionId='20' x:Name="Password" HorizontalAlignment="Left" Margin="100,293,0,-313" Text="Password:" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
                    <TextBox x:ConnectionId='21' x:Name="PasswordUnos" HorizontalAlignment="Left" Margin="175,290,0,-321" Text="" VerticalAlignment="Top" Width="145" Background="White"/>
                    <Button x:ConnectionId='22' Name="LogIn" Content="Log in" HorizontalAlignment="Left" Margin="102,340,0,-368" VerticalAlignment="Top" Foreground="White" Background="OrangeRed" Width="215"/>
                </StackPanel>

                <StackPanel x:ConnectionId='8' Name="RegistracijaPanel" Margin="50, 50, 0, 0">
                    <TextBlock x:ConnectionId='9' Name="Email" HorizontalAlignment="Left" Margin="100,460,0,-480" Text="E-mail:" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
                    <TextBox x:ConnectionId='10' Name="EmailUnos" HorizontalAlignment="Left" Margin="175,456,0,-488" Text="" VerticalAlignment="Top" Width="145" Background="White"/>
                    <TextBlock x:ConnectionId='11' Name="UsernameRegistracija" HorizontalAlignment="Left" Margin="100,508,0,-528" Text="Username:" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
                    <TextBox x:ConnectionId='12' Name="UsernameRegistracijaUnos" HorizontalAlignment="Left" Margin="175,504,0,-536" Text="" VerticalAlignment="Top" Width="145" Background="White"/>
                    <TextBlock x:ConnectionId='13' Name="NemateRacun" HorizontalAlignment="Left" Margin="114,419,0,-439" Text="Nemate račun? Registrujte se." TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
                    <TextBlock x:ConnectionId='14' Name="PasswordRegistrcija" HorizontalAlignment="Left" Margin="100,556,0,-576" Text="Password:" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
                    <TextBox x:ConnectionId='15' Name="PasswordRegistrcijaUnos" HorizontalAlignment="Left" Margin="175,552,0,-584" Text="" VerticalAlignment="Top" Width="145" Background="White"/>
                    <Button x:ConnectionId='16' Name="Register" Content="Register" HorizontalAlignment="Left" Margin="100, 600, 0, -632" VerticalAlignment="Top" Width="220" Foreground="White" Background="OrangeRed"/>
                </StackPanel>

            </Grid>

        </ScrollViewer>
        
    </Grid>
</Page>

