<Page
    x:Class="ProjekatETFManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjekatETFManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Name="BackgroundGrid" MinWidth="600">

        <Grid.Background>
            <ImageBrush ImageSource="/Assets/splash.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Name="ETFManagerPanel" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Assets/logo.png" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Name="LoginPanel" HorizontalAlignment="Center" >
            <TextBlock Name="LOGIN" HorizontalAlignment="Left"  Text="LOG IN" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Segoe UI" FontWeight="Bold" FontSize="36" Foreground="White"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="Username" HorizontalAlignment="Left" Text="Username:" TextWrapping="Wrap" Foreground="White" VerticalAlignment="Center"/>
                <TextBox Name="UsernameUnos" HorizontalAlignment="Right" Width="145" Background="White"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="Password" HorizontalAlignment="Left" Text="Password:" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White"/>
                <TextBox x:Name="PasswordUnos" HorizontalAlignment="Right" Text="" VerticalAlignment="Top" Width="145" Background="White"/>
            </StackPanel>
            <Button Name="LogIn" Content="Log in" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Background="OrangeRed" Width="215"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Name="RegistracijaPanel" Margin="50, 50, 0, 0">
            <TextBlock Name="Email" HorizontalAlignment="Left" Margin="100,460,0,-480" Text="E-mail:" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
            <TextBox Name="EmailUnos" HorizontalAlignment="Left" Margin="175,456,0,-488" Text="" VerticalAlignment="Top" Width="145" Background="White"/>
            <TextBlock Name="UsernameRegistracija" HorizontalAlignment="Left" Margin="100,508,0,-528" Text="Username:" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
            <TextBox Name="UsernameRegistracijaUnos" HorizontalAlignment="Left" Margin="175,504,0,-536" Text="" VerticalAlignment="Top" Width="145" Background="White"/>
            <TextBlock Name="NemateRacun" HorizontalAlignment="Left" Margin="114,419,0,-439" Text="Nemate račun? Registrujte se." TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
            <TextBlock Name="PasswordRegistrcija" HorizontalAlignment="Left" Margin="100,556,0,-576" Text="Password:" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
            <TextBox Name="PasswordRegistrcijaUnos" HorizontalAlignment="Left" Margin="175,552,0,-584" Text="" VerticalAlignment="Top" Width="145" Background="White"/>
            <Button Name="Register" Content="Register" HorizontalAlignment="Left" Margin="100, 600, 0, -632" VerticalAlignment="Top" Width="220" Foreground="White" Background="OrangeRed"/>
        </StackPanel>

    </Grid>
</Page>
